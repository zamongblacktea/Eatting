<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.githrd.project.dao.CartMapper">
	<!-- 회원별 장바구니 목록 조회 -->
	<select id="selectList" parameterType="int" resultType="CartVo"> select * from cart where
		mem_idx=#{mem_idx} </select>

	<!-- cart_idx 1건 조회 -->
	<select id="selectOne" parameterType="int" resultType="CartVo"> select * from cart where
		cart_idx=#{cart_idx} </select>

	<!-- 장바구니에 등록여부 -->
	<select id="selectOneExist" parameterType="CartVo" resultType="CartVo"> select * from cart where
		menu_idx=#{menu_idx} and mem_idx=#{mem_idx} </select>

	<!-- insert -->
	<insert id="insert" parameterType="CartVo"> insert into cart values(null, #{mem_idx},
		#{shop_idx},#{cart_price},#{cart_cnt}) </insert>

</mapper>